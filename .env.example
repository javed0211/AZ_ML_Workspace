# Azure ML Test Automation - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================================================
# Azure Credentials
# ============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_WORKSPACE_NAME=your-workspace-name

# ============================================================================
# Azure AI Search Configuration
# ============================================================================
AZUREAISEARCH_SERVICENAME=your-search-service-name
AZUREAISEARCH_INDEXNAME=your-index-name

# ============================================================================
# Test Execution Settings
# ============================================================================
# Browser type: chromium, firefox, webkit
BROWSER_TYPE=chromium

# Run browsers in headless mode: true, false
HEADLESS_MODE=true

# Number of parallel test workers
WORKERS=2

# Test timeout in milliseconds
TIMEOUT=60000

# ============================================================================
# Playwright Configuration
# ============================================================================
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
DISPLAY=:99

# ============================================================================
# Azure ML Compute Instance Settings
# ============================================================================
# Default compute instance name for testing
COMPUTE_INSTANCE_NAME=test-automation-instance

# Default VM size
VM_SIZE=Standard_DS3_v2

# SSH key path (optional, will be generated if not provided)
SSH_KEY_PATH=~/.ssh/id_rsa

# ============================================================================
# Logging and Debugging
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode: true, false
DEBUG_MODE=false

# ============================================================================
# Container-Specific Settings
# ============================================================================
# Docker registry (for Azure Pipelines)
CONTAINER_REGISTRY=youracr.azurecr.io

# Image repository name
IMAGE_REPOSITORY=azure-ml-test-automation

# Image tag
IMAGE_TAG=latest

# ============================================================================
# Optional: VS Code Remote Settings
# ============================================================================
# VS Code remote SSH host
VSCODE_REMOTE_HOST=

# VS Code remote workspace path
VSCODE_REMOTE_WORKSPACE=/home/azureuser/workspace

# ============================================================================
# Optional: File Sync Settings
# ============================================================================
# Local project path to sync
LOCAL_PROJECT_PATH=./

# Remote project path
REMOTE_PROJECT_PATH=/home/azureuser/workspace

# Sync interval in seconds
SYNC_INTERVAL=5

# ============================================================================
# Optional: Notification Settings
# ============================================================================
# Microsoft Teams webhook URL
TEAMS_WEBHOOK_URI=

# Slack webhook URL
SLACK_WEBHOOK_URL=

# Email notification settings
NOTIFICATION_EMAIL=

# ============================================================================
# Notes:
# ============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. Never commit .env to git (it's in .gitignore)
# 4. For Azure Pipelines, set these as pipeline variables or use Azure Key Vault
# 5. For local Docker testing, use: docker-compose --env-file .env up
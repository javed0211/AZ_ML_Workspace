{
  "Azure": {
    "SubscriptionId": "your-subscription-id",
    "TenantId": "your-tenant-id",
    "ResourceGroup": "your-resource-group",
    "WorkspaceName": "your-workspace-name",
    "Region": "eastus",
    "ClientId": "",
    "ClientSecret": "",
    "Tags": {
      "Environment": "Test",
      "Project": "AzureMLAutomation"
    }
  },
  "AzureAISearch": {
    "ServiceName": "your-search-service",
    "IndexName": "your-search-index",
    "ApiVersion": "2023-11-01",
    "MaxRetries": 3,
    "TimeoutSeconds": 30
  },
  "Browser": {
    "DefaultBrowser": "chromium",
    "Headless": true,
    "DefaultTimeout": 30000,
    "Viewport": {
      "Width": 1920,
      "Height": 1080
    },
    "CaptureScreenshots": true,
    "CaptureVideos": false,
    "CaptureTraces": true,
    "SlowMo": 0,
    "Args": [
      "--disable-web-security",
      "--disable-features=VizDisplayCompositor"
    ]
  },
  "TestExecution": {
    "ParallelExecution": true,
    "MaxDegreeOfParallelism": 4,
    "DefaultTimeoutSeconds": 300,
    "ContinueOnFailure": false,
    "IncludedCategories": [],
    "ExcludedCategories": ["Manual"]
  },
  "Logging": {
    "LogLevel": "Information",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "LogFilePath": "logs/test-execution.log",
    "EnableStructuredLogging": true,
    "MaxLogFileSizeMB": 100,
    "MaxLogFiles": 10
  },
  "Reporting": {
    "GenerateHtmlReport": true,
    "GenerateJsonReport": true,
    "GenerateAllureReport": false,
    "ReportOutputPath": "TestResults",
    "IncludeScreenshots": true,
    "IncludeLogs": true,
    "OpenReportAfterExecution": false
  },
  "Retry": {
    "MaxRetries": 3,
    "DelayBetweenRetriesMs": 1000,
    "BackoffMultiplier": 2.0,
    "MaxDelayMs": 10000,
    "RetryableExceptions": [
      "TimeoutException",
      "HttpRequestException",
      "SocketException",
      "TaskCanceledException"
    ]
  },
  "AITestGeneration": {
    "EnableAIScriptGeneration": true,
    "Provider": "AzureOpenAI",
    "AzureOpenAI": {
      "Endpoint": "https://your-openai-resource.openai.azure.com/",
      "ApiKey": "",
      "DeploymentName": "gpt-4",
      "ApiVersion": "2024-02-15-preview"
    },
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4",
      "BaseUrl": "https://api.openai.com/v1"
    },
    "LocalLLM": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama2",
      "ApiKey": ""
    },
    "GenerationSettings": {
      "MaxTokens": 4000,
      "Temperature": 0.1,
      "TopP": 0.9,
      "FrequencyPenalty": 0.0,
      "PresencePenalty": 0.0,
      "TimeoutSeconds": 60
    },
    "OutputPaths": {
      "FeaturesDirectory": "Features/Generated",
      "StepDefinitionsDirectory": "StepDefinitions/Generated",
      "TasksDirectory": "Framework/Tasks/Generated",
      "QuestionsDirectory": "Framework/Questions/Generated"
    }
  }
}
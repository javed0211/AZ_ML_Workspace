# =============================================================================
# C# Playwright Test Framework - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# These variables can be used with dotnet test or in your IDE

# =============================================================================
# PLAYWRIGHT CONFIGURATION
# =============================================================================

# Browser Selection
# Options: chromium, firefox, webkit, all
# Default: chromium
BROWSER=chromium

# Headless Mode
# Options: true, false
# Default: false (headed mode for debugging)
HEADLESS=false

# Slow Motion (milliseconds)
# Adds delay between Playwright actions for debugging
# Range: 0-5000
# Default: 0 (no delay)
SLOW_MO=0

# Parallel Workers
# Number of parallel test workers
# Default: 3 (local), 1 (CI)
WORKERS=3

# Test Retries
# Number of times to retry failed tests
# Default: 0 (local), 2 (CI)
RETRIES=0

# Test Timeout (milliseconds)
# Maximum time for a single test
# Default: 30000 (30 seconds)
TIMEOUT=30000

# Playwright Trace
# Options: on, off, retain-on-failure
# Default: retain-on-failure
TRACE=retain-on-failure

# Video Recording
# Options: on, off, retain-on-failure
# Default: off
VIDEO=off

# Screenshot Capture
# Options: on, off, only-on-failure
# Default: only-on-failure
SCREENSHOT=only-on-failure

# Base URL
# Base URL for web tests (optional)
# BASE_URL=https://your-app.com

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Azure ML Workspace
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_WORKSPACE_NAME=your-workspace-name
AZURE_REGION=eastus

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=your-index-name

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-doc-intel-key

# Azure Speech Services
AZURE_SPEECH_KEY=your-speech-key
AZURE_SPEECH_REGION=eastus

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================

# Allure Results Directory
# Default: allure-results
ALLURE_RESULTS_DIR=allure-results

# Test Results Directory
# Default: TestResults
TEST_RESULTS_DIR=TestResults

# =============================================================================
# TEST ENVIRONMENT
# =============================================================================

# Test Environment
# Options: local, dev, staging, production
# Default: local
TEST_ENV=local

# Log Level
# Options: Verbose, Debug, Information, Warning, Error, Fatal
# Default: Information
LOG_LEVEL=Information

# CI Environment
# Set to true when running in CI/CD pipeline
# Default: false
CI=false

# =============================================================================
